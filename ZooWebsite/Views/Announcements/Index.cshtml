@model IEnumerable<ZooWebsite.Models.Announcements>

@{
    ViewData["Title"] = "Index";
}

    <header class="w3-container w3-teal">
        <h1>Home</h1>
    </header>
<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="w3-container">
    <table class="table w3-light-blue">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AnnouncementTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AnnouncementText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnnouncementTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnnouncementText)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.AnnouncementId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.AnnouncementId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.AnnouncementId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
